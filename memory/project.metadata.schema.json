{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://codex.local/schemas/project.metadata.schema.json",
  "title": "Project Metadata",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "one_liner"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-_]{1,64}$"
    },
    "title": {"type": "string"},
    "one_liner": {"type": "string", "maxLength": 120},
    "tags": {
      "type": "array",
      "items": {"type": "string"}
    },
    "stack": {
      "type": "array",
      "items": {"type": "string"}
    },
    "entrypoints": {
      "type": "object",
      "additionalProperties": {"type": "string"}
    }
  }
}
